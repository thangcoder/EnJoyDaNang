<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lrlSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ActionBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <LinearLayout
        android:id="@+id/lrlLoginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_weight=".25"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:src="@drawable/ic_logo_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:orientation="vertical">


            <LinearLayout
                style="@style/EdittextSignUp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_login_user"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_user_name" />


                <EditText
                    android:id="@+id/edtUserName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/UserName"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                style="@style/EdittextSignUp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_login_pwd" />


                <EditText
                    android:id="@+id/edtPassWord"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                style="@style/EdittextSignUp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_fullname" />


                <EditText
                    android:id="@+id/edtFullName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/FullName"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                style="@style/EdittextSignUp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_email_3" />


                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                style="@style/EdittextSignUp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_phone" />


                <EditText
                    android:id="@+id/edtPhoneNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/Phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                style="@style/EdittextSignUp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/color_button_login"
                android:text="@string/Home.Account.Register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAlreadyAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Account.Already.Have"
                    android:textColor="@color/color_button_login"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtBackToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:text="@string/Home.Account.Login"
                    android:textColor="@color/color_button_login"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>