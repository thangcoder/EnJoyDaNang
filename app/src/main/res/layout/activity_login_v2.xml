<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <ImageView
        android:layout_width="@dimen/button_login_social_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/btnLoginFb"
            layout="@layout/include_login_facebook"
            android:layout_width="@dimen/button_login_social_width"
            android:layout_height="@dimen/button_login_social_height" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <include
            android:id="@+id/btnLoginGPlus"
            layout="@layout/include_login_glus"
            android:layout_width="@dimen/button_login_social_width"
            android:layout_height="@dimen/button_login_social_height" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <include
            android:id="@+id/btnLoginKakaotalk"
            layout="@layout/include_kakao_login"
            android:layout_width="@dimen/button_login_social_width"
            android:layout_height="@dimen/button_login_social_height" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lrlIdeaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:layout_weight=".25"
            android:background="@color/material_grey_500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:gravity="center_horizontal"
            android:text="@string/idea_connect"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:layout_weight=".25"
            android:background="@color/material_grey_500" />
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/userNameWrapper"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_sign_in_margin"
            android:layout_marginRight="@dimen/btn_sign_in_margin"
            android:drawableLeft="@drawable/ic_login_user"
            android:drawablePadding="10dp"
            android:hint="@string/user_name_hint"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_sign_in_margin"
            android:layout_marginRight="@dimen/btn_sign_in_margin"
            android:drawableLeft="@drawable/ic_login_pwd"
            android:drawablePadding="10dp"
            android:hint="@string/pwd_hint"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnLoginNormal"
        android:layout_width="@dimen/button_login_social_width"
        android:layout_height="@dimen/button_login_social_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/color_button_login"
        android:text="@string/login" />
</LinearLayout>