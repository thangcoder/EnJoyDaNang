<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:id="@+id/lrlLoginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_weight=".25"
            android:contentDescription="@null"
            android:src="@drawable/ic_logo_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="@dimen/button_login_social_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_login_user"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_user_name" />


                <EditText
                    android:id="@+id/edtUserName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:textCursorDrawable="@null"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/user_name_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/button_login_social_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_login_pwd" />


                <EditText
                    android:id="@+id/edtPassWord"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/button_login_social_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_fullname" />


                <EditText
                    android:id="@+id/edtFullName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/label_full_name"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/button_login_social_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_email_3" />


                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/label_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/button_login_social_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightroundborder"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_phone" />


                <EditText
                    android:id="@+id/edtPhoneNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/leftroundborder"
                    android:hint="@string/label_phone"
                    android:inputType="phone"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="@dimen/button_login_social_width"
                android:layout_height="@dimen/button_login_social_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/color_button_login"
                android:text="@string/sign_up" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_account"
                    android:textColor="@color/color_button_login"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtBackToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/sign_in"
                    android:textColor="@color/color_button_login"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>