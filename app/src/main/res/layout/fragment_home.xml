<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:clickable="true"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ss.com.bannerslider.views.BannerSlider
                android:layout_marginTop="10dp"
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                app:animateIndicators="true"
                app:defaultIndicators="circle"
                app:interval="5000"
                app:loopSlides="true" />

            <View
                android:id="@+id/view_below"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/fifty_percent_transparency_grey_400" />

            <GridView
                android:id="@+id/grv_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@color/white"
                android:gravity="center"
                android:horizontalSpacing="@dimen/_1sdp"
                android:minHeight="@dimen/_16sdp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/_1sdp" />

            <!--<include layout="@layout/include_widget" />-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_partner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:focusableInTouchMode="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
