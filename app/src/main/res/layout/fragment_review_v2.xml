<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgPartner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/bg_drink_temp" />


    <TextView
        android:id="@+id/txtAddReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:drawableLeft="@drawable/ic_rate_review_36dp"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:text="Write Your Review" />

    <TextView
        android:id="@+id/txtEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:gravity="center"
        android:text="@string/review_empty"
        android:textColor="@color/red"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_review"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7" />


</LinearLayout>